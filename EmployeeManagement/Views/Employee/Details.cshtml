@model Employee;

@{
    ViewBag.Title = "Employee Detail";
    var photoPath = "~/img/" + (@Model.PhotoPath ?? "");
}

<div class="container mt-5 d-flex" style="height: 100vh;">
    <div class="row justify-content-center align-items-center mx-auto my-auto w-100">
        <div class="card w-50 align-self-center">
            <div class="row row-cols-1">
                <div class="col col-md-4 align-content-center text-center">
                    @if (string.IsNullOrWhiteSpace(Model.PhotoPath)) 
                    {
                        @if (Model.Gender == GenderEnum.Male)
                        {
                            <img class="card-img w-50 m-3" src="~/img/undraw_male_avatar_g98d.min.svg" asp-append-version="true" alt="no-image-male">
                        }
                        else
                        {
                            <img class="card-img w-75 m-3" src="~/img/undraw_Female_avatar_efig.png" asp-append-version="true" alt="no-image-female">
                        } 
                    } 
                    else 
                    {
                        <img class="card-img w-50 m-3" src="@photoPath" asp-append-version="true" alt="avatar">
                    }
                </div>
                <div class="col col-md-8">
                    <div class="card-body">
                        <h3 class="card-title">@Model.Name</h3>
                        <p class="card-subtitle text-secondary mb-1">@Model.Id</p>
                        <p class="card-text">@Model.Gender</p>
                        <p class="card-text mb-0">@Model.Email</p>
                        <p class="card-text">@Model.Departement</p>
                    </div>
                    <div class="card-footer d-flex justify-content-center flex-wrap">
                        <form asp-action="Delete" asp-route-id="@Model.Id" method="post">
                            <a asp-controller="employee" asp-action="index" class="btn btn-primary m-1">Back</a>  
                            <a asp-asp-controller="employee" asp-action="edit" asp-route-id="@Model.Id" class="btn btn-primary m-1">Edit</a>
                            <button type="submit" class="btn btn-danger m-1" method="post">Delete</button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>