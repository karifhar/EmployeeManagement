@inject SignInManager<IdentityUser> signInManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css">
    <script src="https://code.jquery.com/jquery-3.7.1.min.js" 
    integrity="sha256-/JqT3SQfawRcv/BIHPThkBvs0OEvtFFmqPF/lYI/Cxo=" crossorigin="anonymous"></script>
    <title>@ViewBag.Title</title>
</head>
<body>
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a asp-action="index" asp-controller="employee" class="navbar-brand"><img src="~/img/home-button.png" alt="" style="width: 2.5vh;"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarCollapse" aria-controls="navbarCollapse" 
            aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse navbarCollapse" id="navbarCollapse">
                <div class="navbar-nav me-auto">
                    <a class="nav-link active" asp-action="index" asp-controller="employee">Home</a>
                    <a class="nav-link" asp-action="create" asp-controller="employee">Create</a>
                </div>
                <div class="navbar-nav ms-auto">
                    @if(signInManager.IsSignedIn(User)) {
                        <button id="logoutButton" class="nav-link btn btn-link" type="button">Logout</button>
                    } else {
                        <a class="nav-link" asp-controller="Account" asp-action="Login">Login</a>
                        <a class="nav-link" asp-controller="Account" asp-action="register">Register</a>
                    }
                </div>
            </div>
        </div>
    </nav>
    @RenderBody()

    @await Html.PartialAsync("~/Views/Shared/Component/_LogoutModal.cshtml")

    @if(IsSectionDefined("Scripts")) {
        @RenderSection("Scripts", required: true)
    }
 
    <script src="~/lib/bootstrap/dist/js/bootstrap.js" ></script>
    
    <script>
        $(document).ready(function () {
            logoutHandle(); 
        });

        function logoutHandle() {
            $('#logoutButton').click(() => {
                $('#logoutModal').modal('show');
            });

            $('#confirmLogout').off('click').on('click', () => {
                $.ajax({
                    url: '@Url.Action("Logout", "Account")',
                    type: 'POST',
                    success: (response) => {
                        if(response.success) {
                            window.location.href = '@Url.Action("Login", "Account")';
                        }
                    },
                    error: () => {
                        alert("Failed to sign out. Please try again.");
                    }

                })
            })
        }
    </script>
    
</body>
</html>